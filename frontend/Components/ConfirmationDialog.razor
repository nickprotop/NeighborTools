@using MudBlazor
@using frontend.Models

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.body1">@Message</MudText>
            
            @if (!string.IsNullOrEmpty(AdditionalInfo))
            {
                <MudAlert Severity="Severity.Info" Dense="true" Class="my-2">
                    <MudText Typo="Typo.body2">@AdditionalInfo</MudText>
                </MudAlert>
            }
            
            @if (ShowReasonInput)
            {
                <MudTextField @bind-Value="reason"
                            Label="@ReasonLabel"
                            Lines="3"
                            Variant="Variant.Outlined"
                            MaxLength="500"
                            Counter="500" />
            }
        </MudStack>
    </DialogContent>
    
    <DialogActions>
        <MudButton OnClick="Cancel" StartIcon="@Icons.Material.Filled.Close">Cancel</MudButton>
        <MudButton Color="@ConfirmColor" 
                   Variant="Variant.Filled" 
                   OnClick="Confirm" 
                   StartIcon="@Icons.Material.Filled.Check">
            @ConfirmText
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter] public string Title { get; set; } = "Confirm";
    [Parameter] public string Message { get; set; } = "Are you sure?";
    [Parameter] public string? AdditionalInfo { get; set; }
    [Parameter] public bool ShowReasonInput { get; set; } = false;
    [Parameter] public string ReasonLabel { get; set; } = "Reason";
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public Color ConfirmColor { get; set; } = Color.Primary;
    
    private string reason = string.Empty;
    
    private void Cancel() => MudDialog.Cancel();
    
    private void Confirm()
    {
        var result = new ConfirmationDialogResult
        {
            Confirmed = true,
            Reason = ShowReasonInput ? reason : null
        };
        MudDialog.Close(DialogResult.Ok(result));
    }
}