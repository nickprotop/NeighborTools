@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@(Icon ?? Icons.Material.Filled.Warning)" Class="mr-3" Color="@(ConfirmColor ?? Color.Warning)" />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">@Message</MudText>
        @if (!string.IsNullOrWhiteSpace(Details))
        {
            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mt-2">@Details</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" StartIcon="@Icons.Material.Filled.Cancel">
            @(CancelText ?? "Cancel")
        </MudButton>
        <MudButton Color="@(ConfirmColor ?? Color.Primary)" 
                   Variant="Variant.Filled" 
                   OnClick="Submit" 
                   StartIcon="@ConfirmIcon">
            @(ConfirmText ?? "Confirm")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public string? Details { get; set; }
    [Parameter] public string? ConfirmText { get; set; }
    [Parameter] public string? CancelText { get; set; }
    [Parameter] public Color? ConfirmColor { get; set; }
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string? ConfirmIcon { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog.Cancel();
}