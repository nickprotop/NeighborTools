            { "Message", $"\"{rental.ToolName}\" is {daysOverdue} day(s) overdue from {rental.RenterName}." },
            { "AdditionalInfo", "You can contact the renter or report an issue if needed." }
        };

        var options = new DialogOptions 
        { 
            CloseOnEscapeKey = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = DialogService.Show<ConfirmationDialog>("Overdue Tool", parameters, options);
        await dialog.Result;
    }

    private async Task ShowDisputeDialog(Rental rental)
    {
        try
        {
            // Navigate to dispute creation
            Navigation.NavigateTo($"/disputes/create?rentalId={rental.Id}");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error opening dispute: {ex.Message}", Severity.Error);
        }
    }

    private async Task ContactRenter(string renterId, string toolName)
    {
        try
        {
            Navigation.NavigateTo($"/messages?user={renterId}&subject=Regarding {toolName} rental");
            Snackbar.Add("Opening message composer...", Severity.Info);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error opening message: {ex.Message}", Severity.Error);
        }
    }
    
    private bool GetRentalImageLoadError(string rentalKey)
    {
        return rentalImageLoadErrors.GetValueOrDefault(rentalKey, false);
    }
    
    private void HandleRentalImageError(string rentalKey)
    {
        rentalImageLoadErrors[rentalKey] = true;
        StateHasChanged();
    }
    
    private void HandleRentalImageLoad(string rentalKey)
    {
        rentalImageLoadErrors[rentalKey] = false;
        StateHasChanged();
    }

