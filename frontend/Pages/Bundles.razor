    private List<string> GetActiveTagList()
    {
        if (string.IsNullOrEmpty(selectedTags))
            return new List<string>();
            
        return selectedTags.Split(',', StringSplitOptions.RemoveEmptyEntries)
                          .Select(tag => tag.Trim())
                          .Where(tag => !string.IsNullOrEmpty(tag))
                          .ToList();
    }
    
