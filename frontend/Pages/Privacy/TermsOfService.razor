@page "/terms-of-service"
@using MudBlazor
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<PageTitle>Terms of Service - NeighborTools</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4 mb-8">
    <MudPaper Class="pa-6" Elevation="2">
        <MudText Typo="Typo.h4" GutterBottom Class="mb-6">Terms of Service</MudText>
        
        <MudText Typo="Typo.caption" Class="mb-6">
            <strong>Last Updated:</strong> @DateTime.Now.ToString("MMMM dd, yyyy")
        </MudText>

        <MudDivider Class="mb-6" />

        <MudStack Spacing="4">
            <!-- Introduction -->
            <div>
                <MudText Typo="Typo.h5" GutterBottom>1. Agreement to Terms</MudText>
                <MudText Typo="Typo.body1" Class="mb-3">
                    Welcome to NeighborTools! These Terms of Service ("Terms") govern your use of our platform, website, and services. 
                    By accessing or using NeighborTools, you agree to be bound by these Terms.
