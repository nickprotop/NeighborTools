        <MudStack Row Spacing="3" Justify="Justify.Center" Class="mt-6">
            <MudButton Variant="Variant.Filled" 
                      Color="Color.Primary" 
                      Href="/privacy-policy"
                      StartIcon="@Icons.Material.Filled.Security">
