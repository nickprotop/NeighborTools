                    <MudListItem T="string" Icon="@Icons.Material.Filled.Block" IconSize="Size.Small">Violating intellectual property rights</MudListItem>
                </MudList>
            </div>

            <!-- Liability and Insurance -->
            <div>
                <MudText Typo="Typo.h5" GutterBottom>7. Liability and Insurance</MudText>
