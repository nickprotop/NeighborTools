                <MudText Typo="Typo.body1">
                    If you do not agree to these Terms, please do not use our service. We may modify these Terms at any time, 
                    and your continued use constitutes acceptance of the modified Terms.
                </MudText>
            </div>

            <!-- Description of Service -->
            <div>
                <MudText Typo="Typo.h5" GutterBottom>2. Description of Service</MudText>
                <MudText Typo="Typo.body1" Class="mb-3">
                    NeighborTools is a community platform that enables users to share, rent, and borrow tools and equipment from their neighbors. 
                    Our service includes:
                </MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Build" IconSize="Size.Small">Tool listing and discovery</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Build" IconSize="Size.Small">Rental booking and management</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Build" IconSize="Size.Small">User profiles and reviews</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Build" IconSize="Size.Small">Payment processing</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Build" IconSize="Size.Small">Community messaging</MudListItem>
                </MudList>
            </div>

            <!-- User Accounts -->
            <div>
                <MudText Typo="Typo.h5" GutterBottom>3. User Accounts</MudText>
                <MudText Typo="Typo.body1" Class="mb-3">
                    To use our service, you must create an account and provide accurate, complete information. You are responsible for:
                </MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.AccountCircle" IconSize="Size.Small">Maintaining the security of your account credentials</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.AccountCircle" IconSize="Size.Small">All activities that occur under your account</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.AccountCircle" IconSize="Size.Small">Keeping your profile information up to date</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.AccountCircle" IconSize="Size.Small">Notifying us immediately of any unauthorized use</MudListItem>
                </MudList>
                
                <MudAlert Severity="Severity.Warning" Class="mt-3">
                    You must be at least 18 years old to use our service. Users under 18 must have parental consent.
                </MudAlert>
            </div>

            <!-- Tool Sharing Rules -->
            <div>
                <MudText Typo="Typo.h5" GutterBottom>4. Tool Sharing and Rental</MudText>
                
                <MudText Typo="Typo.h6" GutterBottom Class="mt-4">For Tool Owners</MudText>
                <MudText Typo="Typo.body1" Class="mb-3">As a tool owner, you agree to:</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Handshake" IconSize="Size.Small">Provide accurate descriptions and photos of your tools</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Handshake" IconSize="Size.Small">Ensure tools are in safe, working condition</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Handshake" IconSize="Size.Small">Set fair and reasonable rental prices</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Handshake" IconSize="Size.Small">Respond promptly to rental requests</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Handshake" IconSize="Size.Small">Provide proper instructions for tool use</MudListItem>
                </MudList>

                <MudText Typo="Typo.h6" GutterBottom Class="mt-4">For Tool Renters</MudText>
                <MudText Typo="Typo.body1" Class="mb-3">As a tool renter, you agree to:</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Schedule" IconSize="Size.Small">Use tools only for their intended purpose</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Schedule" IconSize="Size.Small">Return tools in the same condition as received</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Schedule" IconSize="Size.Small">Return tools on time as agreed</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Schedule" IconSize="Size.Small">Pay all rental fees promptly</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Schedule" IconSize="Size.Small">Report any damage immediately</MudListItem>
                </MudList>
            </div>

            <!-- Payments and Fees -->
            <div>
                <MudText Typo="Typo.h5" GutterBottom>5. Payments and Fees</MudText>
