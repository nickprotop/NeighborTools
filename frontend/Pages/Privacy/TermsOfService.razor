                    <MudListItem T="string" Icon="@Icons.Material.Filled.Block" IconSize="Size.Small">Fraudulent or deceptive practices</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Block" IconSize="Size.Small">Harassment or abusive behavior toward other users</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Block" IconSize="Size.Small">Attempting to circumvent our payment system</MudListItem>
