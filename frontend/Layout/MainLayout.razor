@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@using frontend.Components
@using frontend.Shared
@using frontend.Models
@using frontend.Services
@using ToolsSharing.Frontend.Configuration
@inherits LayoutComponentBase
@implements IDisposable

<MudThemeProvider IsDarkMode="false" />
<MudSnackbarProvider />

<div class="main-layout">
    <!-- Modern Responsive Header -->
    <header class="navbar">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-0">
            <div class="navbar-content">
                <!-- Mobile Menu Toggle -->
                <MudIconButton Icon="@Icons.Material.Filled.Menu" 
                               OnClick="ToggleMobileMenu"
                               Class="mobile-menu-btn d-md-none"
                               Color="Color.Primary" />

                <!-- Logo/Brand -->
                <MudButton Variant="Variant.Text" 
                           Href="/" 
                           StartIcon="@Icons.Material.Filled.Handyman"
                           Class="navbar-brand">
                    <MudText Typo="Typo.h5" Class="brand-text">NeighborTools</MudText>
                </MudButton>

                <!-- Desktop Navigation -->
                <nav class="navbar-nav d-none d-md-flex">
                    <AuthorizeView>
                        <Authorized>
                            <MudButton Variant="Variant.Text" 
                                       Href="/tools" 
                                       Class="nav-link"
                                       StartIcon="@Icons.Material.Filled.Search">
                                Browse Tools
                            </MudButton>
                            <MudButton Variant="Variant.Text" 
                                       Href="/my-tools" 
                                       Class="nav-link"
                                       StartIcon="@Icons.Material.Filled.Inventory">
                                My Tools
                            </MudButton>
                            <MudButton Variant="Variant.Text" 
                                       Href="/my-rentals" 
                                       Class="nav-link"
                                       StartIcon="@Icons.Material.Filled.Assignment">
                                My Rentals
                            </MudButton>
                            <MudButton Variant="Variant.Text" 
                                       Href="/messages" 
                                       Class="nav-link"
                                       StartIcon="@Icons.Material.Filled.Message">
                                Messages
                            </MudButton>
                            @if (hasOpenDisputes)
                            {
                                <MudButton Variant="Variant.Text" 
                                           Href="/disputes" 
                                           Class="nav-link"
                                           StartIcon="@Icons.Material.Filled.ReportProblem">
                                    Disputes
                                </MudButton>
                            }
                        </Authorized>
                    </AuthorizeView>
                </nav>

                <!-- Right Actions -->
                <div class="navbar-actions">
                    <AuthorizeView>
                        <Authorized>
                            <!-- Add Tool Button (Desktop) -->
                            <MudButton Variant="Variant.Filled" 
                                       Href="/tools/create"
                                       Class="add-tool-btn d-none d-lg-flex"
                                       StartIcon="@Icons.Material.Filled.Add"
                                       Color="Color.Primary">
                                Share Tool
                            </MudButton>

                            <!-- User Menu -->
                            <MudMenu AnchorOrigin="Origin.BottomLeft" 
                                     TransformOrigin="Origin.TopLeft">
                                <ActivatorContent>
                                    <MudButton Variant="Variant.Text" 
                                               StartIcon="@Icons.Material.Filled.AccountCircle"
                                               Class="user-menu-btn">
                                        <span class="d-none d-md-inline">@GetUserDisplayName(context)</span>
                                    </MudButton>
                                </ActivatorContent>
                                <ChildContent>
                                    <MudMenuItem Icon="@Icons.Material.Filled.Person" Href="/profile">
                                        Profile
                                    </MudMenuItem>
                                    <MudMenuItem Icon="@Icons.Material.Filled.Favorite" Href="/favorites">
                                        Favorites
                                    </MudMenuItem>
                                    <MudMenuItem Icon="@Icons.Material.Filled.Settings" Href="/settings">
                                        Settings
                                    </MudMenuItem>
                                    <MudMenuItem Icon="@Icons.Material.Filled.Payment" Href="/settings/payments">
                                        Payment Settings
                                    </MudMenuItem>
                                    <MudMenuItem Icon="@Icons.Material.Filled.PrivacyTip" Href="/privacy-dashboard">
                                        Privacy Dashboard
                                    </MudMenuItem>
                                    @if (isAdmin)
                                    {
                                        <MudDivider />
                                        <MudMenuItem Icon="@Icons.Material.Filled.AdminPanelSettings" Href="/admin">
                                            Admin Dashboard
                                        </MudMenuItem>
                                        <MudMenuItem Icon="@Icons.Material.Filled.Science" Href="/admin/sample-data">
                                            Sample Data
                                        </MudMenuItem>
                                    }
                                    <MudDivider />
                                    <MudMenuItem Icon="@Icons.Material.Filled.Logout" OnClick="LogoutAsync">
                                        Logout
                                    </MudMenuItem>
                                </ChildContent>
                            </MudMenu>
                        </Authorized>
                        <NotAuthorized>
                            <div class="auth-buttons">
                                <MudButton Variant="Variant.Text" 
                                           Href="/login" 
                                           Class="login-btn"
                                           StartIcon="@Icons.Material.Filled.Login">
                                    Log in
                                </MudButton>
                                <MudButton Variant="Variant.Filled" 
                                           Href="/register" 
                                           Class="signup-btn"
                                           StartIcon="@Icons.Material.Filled.PersonAdd"
                                           Color="Color.Primary">
                                    Sign up
                                </MudButton>
                            </div>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </MudContainer>
    </header>

    <!-- Mobile Navigation Overlay -->
    <div class="mobile-nav-overlay @(mobileMenuOpen ? "active" : "")" @onclick="CloseMobileMenu"></div>

    <!-- Mobile Navigation Drawer -->
    <nav class="mobile-nav @(mobileMenuOpen ? "active" : "") d-md-none">
        <div class="mobile-nav-header">
            <div class="mobile-nav-brand">
                <MudIcon Icon="@Icons.Material.Filled.Handyman" Color="Color.Primary" Class="mr-2" />
                <MudText Typo="Typo.h6" Color="Color.Primary" Class="font-weight-bold">NeighborTools</MudText>
            </div>
            <MudIconButton Icon="@Icons.Material.Filled.Close" 
                           OnClick="CloseMobileMenu" 
                           Size="Size.Small" />
        </div>
        
        <div class="mobile-nav-content">
            <AuthorizeView>
                <Authorized>
                    <div class="mobile-nav-section">
                        <MudText Typo="Typo.overline" Class="mobile-nav-title">Navigation</MudText>
                        <MudButton Variant="Variant.Text" 
                                   Href="/tools" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Search"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            Browse Tools
                        </MudButton>
                        <MudButton Variant="Variant.Text" 
                                   Href="/my-tools" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Inventory"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            My Tools
                        </MudButton>
                        <MudButton Variant="Variant.Text" 
                                   Href="/my-rentals" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Assignment"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            My Rentals
                        </MudButton>
                        <MudButton Variant="Variant.Text" 
                                   Href="/messages" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Message"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            Messages
                        </MudButton>
                        @if (hasOpenDisputes)
                        {
                            <MudButton Variant="Variant.Text" 
                                       Href="/disputes" 
                                       FullWidth="true"
                                       StartIcon="@Icons.Material.Filled.ReportProblem"
                                       Class="mobile-nav-item"
                                       OnClick="CloseMobileMenu">
                                Disputes
                            </MudButton>
                        }
                    </div>

                    <div class="mobile-nav-section">
                        <MudText Typo="Typo.overline" Class="mobile-nav-title">Actions</MudText>
                        <MudButton Variant="Variant.Filled" 
                                   Href="/tools/create" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Add"
                                   Class="mobile-nav-primary"
                                   Color="Color.Primary"
                                   OnClick="CloseMobileMenu">
                            Share Tool
                        </MudButton>
                    </div>

                    <div class="mobile-nav-section">
                        <MudText Typo="Typo.overline" Class="mobile-nav-title">Account</MudText>
                        <MudButton Variant="Variant.Text" 
                                   Href="/profile" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Person"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            Profile
                        </MudButton>
                        <MudButton Variant="Variant.Text" 
                                   Href="/favorites" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Favorite"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            Favorites
                        </MudButton>
                        <MudButton Variant="Variant.Text" 
                                   Href="/settings" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Settings"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            Settings
                        </MudButton>
                        @if (isAdmin)
                        {
                            <MudButton Variant="Variant.Text" 
                                       Href="/admin" 
                                       FullWidth="true"
                                       StartIcon="@Icons.Material.Filled.AdminPanelSettings"
                                       Class="mobile-nav-item"
                                       OnClick="CloseMobileMenu">
                                Admin Dashboard
                            </MudButton>
                            <MudButton Variant="Variant.Text" 
                                       Href="/admin/sample-data" 
                                       FullWidth="true"
                                       StartIcon="@Icons.Material.Filled.Science"
                                       Class="mobile-nav-item"
                                       OnClick="CloseMobileMenu">
                                Sample Data
                            </MudButton>
                        }
                    </div>

                    <div class="mobile-nav-footer">
                        <MudButton Variant="Variant.Text" 
                                   Href="/help" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Help"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            Help Center
                        </MudButton>
                        <MudButton Variant="Variant.Text" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Logout"
                                   Class="mobile-nav-item"
                                   OnClick="LogoutFromMobileMenu">
                            Logout
                        </MudButton>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="mobile-nav-section">
                        <MudText Typo="Typo.overline" Class="mobile-nav-title">Get Started</MudText>
                        <MudButton Variant="Variant.Filled" 
                                   Href="/register" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.PersonAdd"
                                   Class="mobile-nav-primary"
                                   Color="Color.Primary"
                                   OnClick="CloseMobileMenu">
                            Sign up
                        </MudButton>
                        <MudButton Variant="Variant.Text" 
                                   Href="/login" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Login"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            Log in
                        </MudButton>
                    </div>

                    <div class="mobile-nav-footer">
                        <MudButton Variant="Variant.Text" 
                                   Href="/help" 
                                   FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.Help"
                                   Class="mobile-nav-item"
                                   OnClick="CloseMobileMenu">
                            Help Center
                        </MudButton>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>


    <!-- Main Content -->
    <main class="main-content">
        <!-- Payment Setup Notification for Tool Owners -->
        <AuthorizeView>
            <Authorized>
                <PaymentSetupNotification />
            </Authorized>
        </AuthorizeView>
        
        <div class="content-wrapper">
            @Body
        </div>
    </main>

    <!-- GDPR Cookie Consent Banner -->
    <CookieConsentBanner UserId="@currentUserId" />
    
    <!-- Terms Compliance Check -->
    <TermsComplianceCheck OnTermsAccepted="OnTermsAcceptedHandler" />
    
    <!-- Session Timeout Management -->
    <AuthorizeView>
        <Authorized>
            <SessionTimeoutComponent />
        </Authorized>
    </AuthorizeView>

    <!-- Footer -->
    <footer class="app-footer">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            <div class="footer-content">
                <div class="footer-section">
                    <MudText Typo="Typo.h6" Class="mb-2">NeighborTools</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Share tools, build community
