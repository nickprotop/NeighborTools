@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor

<MudNavMenu>
    <div class="p-4">
        <MudText Typo="Typo.h6" Color="Color.Primary">
            <MudIcon Icon="Icons.Material.Filled.Handyman" Class="mr-2" />
            NeighborTools
        </MudText>
    </div>
    
    <MudDivider />

    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="Icons.Material.Filled.Home">
                Dashboard
            </MudNavLink>
            
            <MudNavGroup Text="Tools" Icon="Icons.Material.Filled.Build" Expanded="true">
                <MudNavLink Href="/tools" Icon="Icons.Material.Filled.Search">
                    Browse Tools
                </MudNavLink>
                <MudNavLink Href="/my-tools" Icon="Icons.Material.Filled.Inventory">
                    My Tools
                </MudNavLink>
                <MudNavLink Href="/tools/create" Icon="Icons.Material.Filled.Add">
                    Add Tool
                </MudNavLink>
            </MudNavGroup>
            
            <MudNavGroup Text="Rentals" Icon="Icons.Material.Filled.Schedule" Expanded="false">
                <MudNavLink Href="/rentals" Icon="Icons.Material.Filled.CalendarToday">
                    My Rentals
                </MudNavLink>
                <MudNavLink Href="/rentals/history" Icon="Icons.Material.Filled.History">
                    Rental History
                </MudNavLink>
            </MudNavGroup>
            
            <MudDivider Class="my-2" />
            
            <MudNavLink Href="/profile" Icon="Icons.Material.Filled.Person">
                Profile
            </MudNavLink>
            <MudNavLink Href="/settings" Icon="Icons.Material.Filled.Settings">
                Settings
            </MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="/login" Icon="Icons.Material.Filled.Login">
                Login
            </MudNavLink>
            <MudNavLink Href="/register" Icon="Icons.Material.Filled.PersonAdd">
                Register
            </MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>
