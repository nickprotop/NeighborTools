{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=toolssharing;uid=toolsuser;pwd=ToolsPassword123!"
  },
  "JwtSettings": {
    "SecretKey": "ThisIsAVeryLongSecretKeyForJWTTokenGenerationThatShouldBeAtLeast256BitsLong",
    "Issuer": "ToolsSharing.API",
    "Audience": "ToolsSharing.Client",
    "ExpiresInMinutes": 60,
    "RefreshTokenExpiresInDays": 7
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "GDPR": {
    "ExportPath": "./exports",
    "DataRetentionPeriodYears": 7,
    "CookieConsentExpiryDays": 365,
    "PrivacyPolicyVersion": "1.0"
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "api1": {
            "Address": "http://localhost:5002/"
          },
          "api2": {
            "Address": "http://localhost:5003/"
          }
        }
      }
    }
  },
  "EmailSettings": {
    "Provider": "Smtp",
    "SmtpServer": "",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "EnableSsl": true,
    "TimeoutSeconds": 30,
    "FromEmail": "noreply@neighbortools.com",
    "FromName": "NeighborTools",
    "ReplyToEmail": "support@neighbortools.com",
    "ReplyToName": "NeighborTools Support",
    "ApiKey": "",
    "ApiSecret": "",
    "EnableQueue": true,
    "MaxRetries": 3,
    "RetryDelaySeconds": 300,
    "BatchSize": 50,
    "MaxEmailsPerHour": 1000,
    "MaxEmailsPerDay": 10000,
    "TemplatesPath": "EmailTemplates",
    "UseRazorTemplates": true,
    "TestMode": false,
    "TestEmailRecipient": "",
    "LogEmailContent": false,
    "BaseUrl": "http://localhost:5000",
    "UnsubscribeUrl": "http://localhost:5000/unsubscribe",
    "PrivacyPolicyUrl": "http://localhost:5000/privacy"
  },
  "Frontend": {
    "BaseUrl": "http://localhost:5000"
  }
}