@model dynamic
@{
    Layout = "_Layout";
}

<h2>Test Email</h2>

<p>Hi @Model.RecipientName,</p>

<p>
    This is a test email from NeighborTools to verify that your email configuration is working correctly.
</p>

<div class="alert alert-info">
    <strong>✅ Email Configuration Test</strong><br>
    If you're reading this message, your email system is configured properly!
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div style="background-color: #f8f9fa; border-radius: 8px; padding: 20px; margin: 20px 0;">
        <h3>Test Message</h3>
        <p>@Model.Message</p>
    </div>
}

<h3>Configuration Details</h3>

<p>This test email confirms that:</p>

<ul style="margin: 20px 0; padding-left: 20px;">
    <li>✅ SMTP/Email provider connection is working</li>
    <li>✅ Email templates are rendering correctly</li>
    <li>✅ HTML formatting is preserved</li>
    <li>✅ Base layout is applied properly</li>
</ul>

<p style="font-size: 14px; color: #6c757d;">
    <strong>Note:</strong> This is a test email sent by an administrator to verify email functionality. 
    No action is required on your part.
</p>

<p>
    Happy testing!<br>
    <strong>The NeighborTools Team</strong>
</p>