@model dynamic
@{
    Layout = "_Layout";
}

<h2>Rental Request Update</h2>

<p>Hi @Model.RenterName,</p>

<p>
    Unfortunately, your rental request for <strong>@Model.ToolName</strong> was not approved by the owner.
</p>

<!-- Tool Details Card -->
<div style="background-color: #f8f9fa; border-radius: 8px; padding: 20px; margin: 20px 0;">
    <h3 style="margin-top: 0;">Request Details</h3>
    
    <table width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td style="padding: 5px 0;"><strong>Tool:</strong></td>
            <td style="padding: 5px 0;">@Model.ToolName</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Owner:</strong></td>
            <td style="padding: 5px 0;">@Model.OwnerName</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Requested Dates:</strong></td>
            <td style="padding: 5px 0;">@Model.StartDate.ToString("MMM d") - @Model.EndDate.ToString("MMM d, yyyy")</td>
        </tr>
    </table>
    
    @if (!string.IsNullOrEmpty(Model.RejectionReason))
    {
        <div style="margin-top: 15px; padding: 15px; background-color: #ffffff; border-radius: 6px; border-left: 4px solid #dc3545;">
            <strong>Reason provided:</strong><br>
            @Model.RejectionReason
        </div>
    }
</div>

<h3>Don't Give Up!</h3>

<p>
    There are many reasons a rental request might not be approved - the tool might already be 
    reserved, or the owner might have scheduling conflicts. Here's what you can do next:
</p>

<div style="text-align: center; margin: 30px 0;">
    <a href="@Model.BrowseToolsUrl" class="button">
        Browse Similar Tools
    </a>
    <a href="@Model.SearchUrl?category=@Model.ToolCategory" class="button button-secondary" style="margin-left: 10px;">
        Search @Model.ToolCategory
    </a>
</div>

<h3>Tips for Successful Rentals</h3>

<ul style="margin: 20px 0; padding-left: 20px;">
    <li>Book tools well in advance for better availability</li>
    <li>Include a friendly message with your rental request</li>
    <li>Check the owner's availability calendar before requesting</li>
    <li>Consider alternative dates if your schedule is flexible</li>
    <li>Build your reputation with positive reviews from other rentals</li>
</ul>

<div class="divider"></div>

<p style="font-size: 14px; color: #6c757d;">
    <strong>Refund Information:</strong> If you were charged for this rental, the amount will be 
    automatically refunded to your original payment method within 3-5 business days.
</p>

<p>
    Keep exploring!<br>
    <strong>The NeighborTools Team</strong>
</p>