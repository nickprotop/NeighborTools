@model dynamic
@{
    Layout = "_Layout";
    var duration = Model.Duration > 1 ? $"{Model.Duration} days" : "1 day";
}

<h2>New Rental Request for @Model.ToolName</h2>

<p>Hi @Model.OwnerName,</p>

<p>
    Great news! <strong>@Model.RenterName</strong> would like to rent your 
    <strong>@Model.ToolName</strong>.
</p>

<!-- Tool Details Card -->
<div style="background-color: #f8f9fa; border-radius: 8px; padding: 20px; margin: 20px 0;">
    @if (!string.IsNullOrEmpty(Model.ToolImageUrl))
    {
        <img src="@Model.ToolImageUrl" alt="@Model.ToolName" style="width: 100%; max-width: 200px; height: auto; border-radius: 6px; margin-bottom: 15px;">
    }
    
    <h3 style="margin-top: 0;">Rental Details</h3>
    
    <table width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td style="padding: 5px 0;"><strong>Tool:</strong></td>
            <td style="padding: 5px 0;">@Model.ToolName</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Renter:</strong></td>
            <td style="padding: 5px 0;">@Model.RenterName</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Start Date:</strong></td>
            <td style="padding: 5px 0;">@Model.StartDate.ToString("dddd, MMMM d, yyyy")</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>End Date:</strong></td>
            <td style="padding: 5px 0;">@Model.EndDate.ToString("dddd, MMMM d, yyyy")</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Duration:</strong></td>
            <td style="padding: 5px 0;">@duration</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Total Amount:</strong></td>
            <td style="padding: 5px 0; font-size: 20px; color: #28a745;"><strong>$@Model.TotalCost.ToString("F2")</strong></td>
        </tr>
    </table>
    
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div style="margin-top: 15px; padding: 15px; background-color: #ffffff; border-radius: 6px; border-left: 4px solid #594AE2;">
            <strong>Message from @Model.RenterName:</strong><br>
            @Model.Message
        </div>
    }
</div>

<div class="alert alert-warning">
    <strong>⏰ Action Required:</strong> Please respond to this request within 24 hours. 
    Rental requests expire after 48 hours if not responded to.
</div>

<div style="text-align: center; margin: 30px 0;">
    <a href="@Model.ApprovalUrl" class="button" style="background-color: #28a745; margin-right: 10px;">
        Approve Request
    </a>
    <a href="@Model.RentalDetailsUrl" class="button button-secondary">
        View Details
    </a>
</div>

<h3>What Happens Next?</h3>

<ol style="margin: 20px 0; padding-left: 20px;">
    <li>Review the rental request and renter's profile</li>
    <li>Approve or decline the request</li>
    <li>If approved, coordinate pickup details with the renter</li>
    <li>Receive payment after successful rental completion</li>
</ol>

<div class="divider"></div>

<p style="font-size: 14px; color: #6c757d;">
    <strong>Tips for a successful rental:</strong><br>
    • Respond promptly to rental requests<br>
    • Communicate clearly about pickup/return times<br>
    • Take photos of the tool before and after rental<br>
    • Leave a review after the rental is complete
</p>

<p>
    Happy renting!<br>
    <strong>The NeighborTools Team</strong>
</p>