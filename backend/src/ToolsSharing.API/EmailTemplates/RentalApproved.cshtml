@model dynamic
@{
    Layout = "_Layout";
    var duration = Model.Duration > 1 ? $"{Model.Duration} days" : "1 day";
}

<h2>üéâ Your Rental Request Has Been Approved!</h2>

<p>Hi @Model.RenterName,</p>

<p>
    Great news! <strong>@Model.OwnerName</strong> has approved your rental request for 
    <strong>@Model.ToolName</strong>.
</p>

<!-- Tool Details Card -->
<div style="background-color: #f8f9fa; border-radius: 8px; padding: 20px; margin: 20px 0;">
    @if (!string.IsNullOrEmpty(Model.ToolImageUrl))
    {
        <img src="@Model.ToolImageUrl" alt="@Model.ToolName" style="width: 100%; max-width: 200px; height: auto; border-radius: 6px; margin-bottom: 15px;">
    }
    
    <h3 style="margin-top: 0;">Rental Details</h3>
    
    <table width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td style="padding: 5px 0;"><strong>Tool:</strong></td>
            <td style="padding: 5px 0;">@Model.ToolName</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Owner:</strong></td>
            <td style="padding: 5px 0;">@Model.OwnerName</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Start Date:</strong></td>
            <td style="padding: 5px 0;">@Model.StartDate.ToString("dddd, MMMM d, yyyy")</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>End Date:</strong></td>
            <td style="padding: 5px 0;">@Model.EndDate.ToString("dddd, MMMM d, yyyy")</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Duration:</strong></td>
            <td style="padding: 5px 0;">@duration</td>
        </tr>
        <tr>
            <td style="padding: 5px 0;"><strong>Total Cost:</strong></td>
            <td style="padding: 5px 0; font-size: 20px; color: #28a745;"><strong>$@Model.TotalCost.ToString("F2")</strong></td>
        </tr>
    </table>
    
    @if (!string.IsNullOrEmpty(Model.OwnerMessage))
    {
        <div style="margin-top: 15px; padding: 15px; background-color: #ffffff; border-radius: 6px; border-left: 4px solid #594AE2;">
            <strong>Message from @Model.OwnerName:</strong><br>
            @Model.OwnerMessage
        </div>
    }
</div>

<div class="alert alert-warning">
    <strong>üìç Pickup Location:</strong> @Model.PickupAddress<br>
    <strong>‚è∞ Pickup Time:</strong> @Model.PickupTime
</div>

<div style="text-align: center; margin: 30px 0;">
    <a href="@Model.RentalDetailsUrl" class="button">
        View Rental Details
    </a>
    <a href="@Model.MessageOwnerUrl" class="button button-secondary" style="margin-left: 10px;">
        Message Owner
    </a>
</div>

<h3>Next Steps</h3>

<ol style="margin: 20px 0; padding-left: 20px;">
    <li>Review the pickup location and time</li>
    <li>Contact the owner if you need to arrange a different pickup time</li>
    <li>Bring your ID for verification during pickup</li>
    <li>Inspect the tool before taking it</li>
    <li>Return the tool on time and in the same condition</li>
</ol>

<div class="divider"></div>

<h3>Important Reminders</h3>

<ul style="margin: 20px 0; padding-left: 20px;">
    <li>Take photos of the tool before and after use</li>
    <li>Report any issues immediately to the owner</li>
    <li>Be respectful of pickup and return times</li>
    <li>Leave a review after your rental is complete</li>
</ul>

<p style="font-size: 14px; color: #6c757d;">
    <strong>Need help?</strong> Visit our <a href="@Model.BaseUrl/help">Help Center</a> or 
    <a href="@Model.BaseUrl/contact">contact support</a>.
</p>

<p>
    Happy building!<br>
    <strong>The NeighborTools Team</strong>
</p>